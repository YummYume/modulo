services:
  nginx:
    build:
      context: .
      dockerfile: nginx/Dockerfile
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - "./api/public:/app/api/public"
      - "./nginx/logs:/logs"
    depends_on:
      - api
    networks:
      - modulo_network

  api:
    build:
      context: .
      dockerfile: api/Dockerfile
    networks:
      - modulo_network
    restart: always
    volumes:
      - "./api:/app/api:rw,cached"

  db:
    image: mariadb:10.8.2
    restart: always
    environment:
      MARIADB_ROOT_PASSWORD: "${MARIADB_ROOT_PASSWORD}"
      MARIADB_DATABASE: "${MARIADB_DATABASE}"
      MARIADB_USER: "${MARIADB_USER}"
      MARIADB_PASSWORD: "${MARIADB_PASSWORD}"
    networks:
      - modulo_network
    env_file:
      - .env

  phpmyadmin:
    image: phpmyadmin:latest
    restart: always
    ports:
      - "8080:80"
    environment:
      PMA_HOST: db
    depends_on:
      - db
    networks:
      - modulo_network

  app:
    build:
      context: .
      dockerfile: app/Dockerfile
    volumes:
      - "./app:/usr/src/app:rw,cached"
      - "/usr/src/app/node_modules"
    stdin_open: true
    environment:
      - CI=true
      - CHOKIDAR_USEPOLLING=true
      - FAST_REFRESH=false
      - NODE_ENV=development
    ports:
      - "3000:3000"
    restart: always
    networks:
      - modulo_network

  mailcatcher:
    image: sj26/mailcatcher:latest
    ports:
      - "1080:1080"
    networks:
      - modulo_network

networks:
  modulo_network:
    driver: bridge
